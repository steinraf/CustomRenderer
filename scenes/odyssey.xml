<scene>
    <integrator type="path">
        <integer name="max_depth" value="200"/>
    </integrator>


    <sensor type="perspective">
        <float name="fov" value="39.3077"/>


        <transform name="to_world">
            <lookat origin="20, 20, 50"
                    target="0, 4, 0"
                    up="0, 1, 0"/>
        </transform>



        <sampler type="independent">
            <integer name="sample_count" value="1024"/>
        </sampler>

        <film type="hdrfilm">
            <integer name="width" value="768"/>
            <integer name="height" value="432"/>
        </film>

    </sensor>

    <!-- monolith -->
    <shape type="obj" id="monolith">
        <transform name="to_world">
            <translate value="0, 0.5, 0"/>
            <scale value="1, 9, 4"/>
        </transform>

        <string name="filename" value="scenes/obj/cube.obj"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.2, 0.2, 0.2"/>
        </bsdf>
    </shape>

    <!-- floor -->
    <shape type="obj" id="floor">
        <string name="filename" value="scenes/obj/cube.obj"/>
        <transform name="to_world">
            <translate value="0, -0.5, 0"/>
            <scale value="25, 1, 18"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.85, 0.85, 0.85"/>
        </bsdf>
    </shape>

    <shape type="obj" id="emitter">
        <string name="filename" value="scenes/obj/cube.obj"/>
        <transform name="to_world">
            <translate value="0, 0.5, 0"/>
            <scale value="1, 10, 18"/>
            <translate value="-12, 0, 0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.0, 0.0, 0.0"/>
        </bsdf>
        <emitter type="area">
            <rgb name="radiance" value="1.0, 1.0, 1.0"/>
        </emitter>
    </shape>
</scene>
