<scene>
    <integrator type="path">
        <integer name="max_depth" value="5"/>
    </integrator>

    <sensor type="perspective">
        <float name="fov" value="45"/>
<!--        <float name="aperture_radius" value="0.08"/>-->
<!--        <float name="focus_distance" value="450"/>-->
<!--        <float name="k1" value="1"/>-->
<!--        <float name="k2" value="10"/>-->

        <transform name="to_world">
            <lookat target="0, 30, 0"
                    origin="-220, 60, 0"
                    up="0, 1, 0"/>
        </transform>

        <sampler type="independent">
            <integer name="sample_count" value="1024"/>
        </sampler>

        <film type="hdrfilm">
<!--            <integer name="height" value="600"/>-->
<!--            <integer name="width" value="800"/>-->
            <integer name="height" value="216"/>
            <integer name="width" value="384"/>
<!--            <integer name="height" value="2160"/>-->
<!--            <integer name="width" value="3840"/>-->
        </film> 

    </sensor>


    <shape type="obj">
        <string name="filename" value="scenes/compOBJ/pool.obj"/>


        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.3, 0.3, 0.3"/>
        </bsdf>
    </shape>

    <shape type="obj">
        <string name="filename" value="scenes/compOBJ/ladder.obj"/>


        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.75, 0.75, 0.75"/>
        </bsdf>
    </shape>

    <shape type="obj">
        <string name="filename" value="scenes/compOBJ/water.obj"/>

        <bsdf type="dielectric"/>
    </shape>



    <shape type="obj" name="moon">
        <string name="filename" value="scenes/obj/sphere2.obj"/>

        <transform name="to_world">
            <scale value="1.5, 1.5, 1.5"/>
            <translate value="300, 50, 0"/>
        </transform>
        <string name="texture" value="scenes/textures/moon.jpg"/>

        <bsdf type="diffuse"/>

        <emitter type="area">
            <rgb name="radiance" value="1, 1, 1"/>
        </emitter>
    </shape>

    <shape type="obj" name="astronaut2">

        <string name="filename" value="scenes/compOBJ/astronaut2.obj"/>
        <bsdf type="mirror">
        </bsdf>
    </shape>


    <shape type="obj" name="moon">
        <string name="filename" value="scenes/obj/sphere2.obj"/>

        <transform name="to_world">
            <scale value="1, 1, 1"/>
            <translate value="-30, 30, -200"/>
        </transform>
        <string name="texture" value="scenes/textures/moon.jpg"/>

        <bsdf type="diffuse"/>

        <emitter type="area">
            <rgb name="radiance" value="10, 10, 10"/>
        </emitter>
    </shape>

    <shape type="obj" name="lights">
        <string name="filename" value="scenes/compOBJ/poolLights.obj"/>


        <emitter type="area">
            <rgb name="radiance" value="80, 160, 80"/>
        </emitter>
    </shape>

    <shape type="obj" name="lightframes">
        <string name="filename" value="scenes/compOBJ/poolLightsFrame.obj"/>

        <bsdf type="diffuse">
            <rgb name="reflectance" value="1, 1, 1"/>
        </bsdf>
    </shape>


    <emitter type="envmap">
        <string name="filename" value="scenes/envmap/highres/starmap.hdr"/>
    </emitter>




</scene>
