<scene>
    <integrator type="path">
        <integer name="max_depth" value="200"/>
    </integrator>

    <sensor type="perspective">
        <float name="fov" value="27.7856"/>
        <float name="aperture" value="0.0"/>


        <transform name="to_world">
            <lookat target="0, 0, 4.5"
                    origin="0, 0, 5.5"
                    up="0, 1, 0"/>
        </transform>



        <sampler type="independent">
            <integer name="sample_count" value="64"/>
        </sampler>

        <film type="hdrfilm">
            <integer name="height" value="600"/>
            <integer name="width" value="800"/>
        </film>

    </sensor>

    <shape type="obj" id="plane">
        <string name="filename" value="scenes/obj/plane.obj"/>

        <transform name="to_world">
            <rotateAxis axis="1, 0, 0" angle="90"/>
            <rotateAxis axis="0, 0, -1" angle="-90"/>
        </transform>
        <string name="texture" value="scenes/envmap/chapel.hdr"/>
        <bsdf type="diffuse"/>
    </shape>


    <shape type="obj">
        <string name="filename" value="scenes/obj/light.obj"/>

        <transform>
            <translate value="0, 5, -5"/>
            <rotateAxis axis="1, 0, 0" angle="90"/>
        </transform>

        <emitter type="area">
            <rgb name="radiance" value="500, 500, 500"/>
        </emitter>
    </shape>
</scene>
